<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        //상단 고정

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#3A5077"
                android:text="게시판"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
                <ImageButton
                    android:id="@+id/mypage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="355dp"
                    android:layout_marginTop="7dp"
                    android:backgroundTint="#00FFFFFF"
                    android:src="@mipmap/info"
                    android:tint="#FFFFFF" />
            </androidx.appcompat.widget.Toolbar>
        </FrameLayout>


        <LinearLayout

            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/reserv" />

                <TextView
                    android:id="@+id/reservText"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약 현황"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="140dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@drawable/textview_round">

                    <TextView
                        android:id="@+id/rsv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rsv2"
                        android:layout_width="407dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@drawable/textview_round">

                    <TextView
                        android:id="@+id/rsv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rsv4"
                        android:layout_width="407dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="180dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="66dp"
                    android:src="@mipmap/list" />

                <TextView
                    android:id="@+id/lateText"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 게시물"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/postname"
                android:layout_width="360dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textview_round"
                android:text=""
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/postname2"
                android:layout_width="360dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textview_round"
                android:text=""
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/postname3"
                android:layout_width="360dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textview_round"
                android:text=""
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/postname4"
                android:layout_width="360dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textview_round"
                android:text=""
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="66dp"
                    android:src="@mipmap/chat" />

                <TextView
                    android:id="@+id/chattingText"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채팅 목록"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chatboard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textview_round"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="9dp"
                        android:layout_marginBottom="18dp"
                        android:src="@mipmap/people" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="2dp"
                            android:text="경기대학교 후문 -> 강남역 (3명)"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="2dp"
                            android:text="안녕하세요~"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/chatboard2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/textview_round"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="9dp"
                        android:layout_marginBottom="18dp"
                        android:src="@mipmap/people" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="2dp"
                            android:text="경기대후문 -> 종합강의동 (4명)"
                            android:textColor="#000000"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="2dp"
                            android:text="후문에서 픽업해서 갑니다"
                            android:textColor="#000000"
                            android:textSize="13dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:itemIconTint="#000"
            app:itemTextColor="#000"
            app:menu="@menu/bottom_menu" />
    </LinearLayout>



</layout>
